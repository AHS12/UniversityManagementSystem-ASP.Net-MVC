@model UniversityManagementSystemWebApp.Models.Department

@{
//    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SaveDepartments</title>
</head>
<body>
<h2>Create New Department</h2>
    <hr />
    

    <div class="form-horizontal">

        @using (Html.BeginForm("SaveDepartments", "Department", FormMethod.Post, new {id = "saveDepartmentForm", @class = ""}))
        {
            <div class="form-group ">
                <div class="col-md-2 control-label">
                    @Html.LabelFor(x => x.Code)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Code)
                    @Html.ValidationMessageFor(x => x.Code)
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-2 control-label">
                    @Html.LabelFor(x => x.Name)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Name)
                    @Html.ValidationMessageFor(x => x.Name)

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Save"/>
                    
                </div>
                <br/>
                @if (ViewBag.Message != null)
{
    <label class="col-md-10">@ViewBag.Message</label>
}
           </div>
        }
       
        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
      
    </div>
</body>
</html>
